#include<stdio.h>
#include<string.h>
int main()
{
	char str[20];
	int i,j=0,n=0,count=0;
	gets(str);
	for(i=0;str[i]!='\0';i++)
	{
		if(isupper(str[i]))
		{
        n=n+1;
    }
	    else if(islower(str[i]))
	    {
		
	    j=j+1;
	    }else if(isdigit(str[i]))
	    {
		count=count+1;
	}}
	printf("no of upper case=%d\n",n);
	printf("no of lower case=%d\n",j);
	printf("no of digits=%d\n",count);
}
